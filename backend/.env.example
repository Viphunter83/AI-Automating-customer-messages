# === DATABASE ===
# Локальная PostgreSQL для MVP (через docker-compose)
DATABASE_URL=postgresql+asyncpg://support_user:support_pass@localhost:5432/ai_support

# === SUPABASE (опционально, для будущего использования) ===
# Раскомментируйте и заполните, когда будете переходить на Supabase:
# SUPABASE_URL=https://xxxxx.supabase.co
# SUPABASE_ANON_KEY=xxxxx

# === OPENAI / LLM ===
OPENAI_API_KEY=sk-xxxxx
OPENAI_API_BASE=https://api.proxyapi.ru/openai/v1
OPENAI_MODEL=gpt-4o-mini

# === APP ===
APP_NAME=AI Customer Support
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# === SECURITY ===
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# === TIMEOUTS ===
AI_CLASSIFICATION_TIMEOUT=30
AI_CONFIDENCE_THRESHOLD=0.85

# === REDIS CACHE (optional, falls back to in-memory cache if not available) ===
# Для локальной разработки через docker-compose используйте:
REDIS_URL=redis://redis:6379/0
# Для локальной разработки без Docker используйте:
# REDIS_URL=redis://localhost:6379/0

# === TELEGRAM BOT (optional, for testing before CRM integration) ===
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ENABLED=False  # Установите True для включения бота
# Для production используйте webhook (опционально):
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/integrations/telegram/webhook
# TELEGRAM_WEBHOOK_SECRET=your_secret_token_here

